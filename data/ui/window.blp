using Gtk 4.0;
using He 1;

menu primary-menu {
  item (_("Preferencesâ€¦"), "win.preferences")
  item (_("Keyboard Shortcuts"), "win.show-help-overlay")
  item (_("About tauOS Rust Template"), "app.about")
}

template ApplicationWindow : He.ApplicationWindow {
  default-width: 360;
  default-height: 360;

  Gtk.Box {
    orientation: vertical;

    He.AppBar {
      show-back: false;

      Gtk.MenuButton {
        icon-name: "open-menu-symbolic";
        menu-model: primary-menu;
      }
    }

    He.ViewMono {
      title: _("Hello, World!");

      Gtk.Label {
        label: _("This is a sample app using Helium technologies.");
      }
    }
  }
}
